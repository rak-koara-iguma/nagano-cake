<div class="container">
  <div class="row justify-content-center"> <!-- justify-content-center を追加して中央寄せ -->
    <div class="col-md-6 text-center">
      <h1>商品新規登録</h1>
      <table>
        <%= form_with model: @item, url: admin_items_path do |f| %>
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name, class: "form-control", placeholder: "商品名" %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <th>税抜き価格</th>
            <td><%= f.number_field :price, class: "form-control", placeholder: "1000" %></td>
          </tr>
          <tr>
            <td colspan="2"><%= f.submit '新規登録', class: 'btn btn-primary' %></td> <!-- colspan="2" を追加してセルを結合 -->
          </tr>
<% end %>
      </table>
    </div>
  </div>
</div>