<div class="container">
  <div class="row justify-content-center"> <!-- justify-content-center を追加して中央寄せ -->
    <div class="col-md-6 text-center">
      <table class="table table-hover">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
            </tr>
              <% @items.each do |item| %>
            <tr>
              <th></th>
              <th>
                <%= link_to item.name, admin_item_path(item.id) %>
              </th>
              <th><%= item.price %></th>
            </tr>
          </thead>
        <% end %>
      </table>
    </div>
  </div>
</div>