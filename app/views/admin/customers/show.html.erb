<div class="container">
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>
            <h3><%= @customer.last_name+@customer.first_name %>さんの会員詳細</h3>
          </th>
        </tr>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name+@customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana+@customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td></td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %></td>
          <td><%= link_to "注文履歴を見る", edit_admin_customer_path, class: "btn btn-primary" %></td>
        </tr>
    </table>