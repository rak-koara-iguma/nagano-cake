<div class="container">
  <div class="row justify-content-center"> <!-- justify-content-center を追加して中央寄せ -->
    <div class="col-mt-10 text-center">
      <table class="table table-hover table-striped">
        <% @customers.each do |customer| %>
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
            <tr>
              <th>
                <%= customer.id %>
              </th>
              <th>
                <%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id) %>
              </th>
              <th><%= customer.email %></th>
              <th></th>
            </tr>
          </thead>
        <% end %>
      </table>
    </div>
  </div>
</div>