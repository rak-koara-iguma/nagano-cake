<div class="container">
  <div class="row">
    <div class="col-md-4" style="background-color: white;">
      <%= render "public/shared/janru" %>
    </div>
    <div class="col-md-8">
      <h2>商品一覧</h2>全<%= @items.count %>件
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mt-5">
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.get_image, size: "150x100" %>
              <% end %>
              <p><%= item.name %></p>
              <p>￥<%= item.price %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>