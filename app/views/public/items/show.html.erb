<%= form_with model: CartItem.new do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-4" style="background-color: white;">
      <%= render "public/shared/janru" %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-5">
          <%= image_tag @item.get_image, size: "300x200" %>
        </div>
        <div class="col-md-7">
           <h1><%= @item.name %></h1>
           <h3><%= @item.introduction %></h3>
           <h2><%= @item.price %></h2>
           <%= f.hidden_field :item_id, :value => @item.id %>
           <p><%= f.select :amount, *[1..5] %></p>
           <p><%= f.submit 'カートに入れる', class: "btn btn-success" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>