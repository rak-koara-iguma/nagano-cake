<%= form_with model: CartItem do |f| %>
<div class="container">
  <div class="row">
    <p><h3>ショッピングカート</h3></p>
    <p><%= link_to "全て削除", cart_items_destroy_all_path(@cart_items.ids), method: :delete, "data-confirm" => "本当に消しますか？" %></p>
      <table border="1" style="boeder-collapse: collapse">
        <tr>
          <td>商品名</td>
          <td>単価（税込み）</td>
          <td>数量</td>
          <td>小計</td>
          <td></td>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= f.select :amount, *[1..5] %>
              <%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <td><%= @sum += cart_item.subtotal %></td>
            <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>
<% end %>