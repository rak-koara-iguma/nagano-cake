<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_with model: @order, url: orders_check_path do |f| %>
      <table>
        <tr>
          <td><h3>注文情報入力</h3></td>
        </tr>
        <tr>
          <td><h4>支払方法</h4></td>
        </tr>
        <tr>
          <td>
            <%#= f.radio_button :method_of_payment, Order.payment_methods.key(0) %>
            <%#= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
             <%= f.radio_button :method_of_payment, Order.method_of_payments.key(0) %>
            <%= f.label :payment_method_credit_card, Order.method_of_payments_i18n[:credit_card] %>
          </td>
        </tr>
         <tr>
          <td>
            <%#= f.radio_button :method_of_payment, Order.payment_methods.key(1) %>
            <%#= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
            <%= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %>
            <%= f.label :payment_method_transfer, Order.method_of_payments_i18n[:transfer]%>
          </td>
        </tr>
        <tr>
          <td><h4>お届け先</h4></td>
        </tr>
         <tr>
          <td>〒 <%= current_customer.postal_code+current_customer.address %></td>
        </tr>
        <tr>
          <td><%= current_customer.last_name+current_customer.first_name %></td>
        </tr>
        <tr>
          <td class="text_center"><%= f.submit '確認画面に進む', class: "btn btn-primary" %>
            <%#= link_to "確認画面へ進む", orders_check_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>